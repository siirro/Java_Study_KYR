<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    

<!--namespace의 값은 사용할 DAO의 풀패키지명 -->	
    
<mapper namespace="com.iu.start.board.notice.NoticeDAO">
<select id="getList" resultType="NoticeDTO" parameterType="java.util.Map">
SELECT * FROM 
(SELECT ROWNUM R, N.* FROM
(SELECT * FROM NOTICE ORDER BY NUM DESC) N)
WHERE R BETWEEN #{startRow} AND #{lastRow}
</select>

<select id="getDetail" parameterType="BoardDTO" resultType="NoticeDTO">
SELECT * FROM NOTICE WHERE NUM = #{num}
</select>

<insert id="setAdd" parameterType="BoardDTO">
INSERT INTO NOTICE VALUES(BOARD_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, 0)
</insert>

<update id="setUpdate" parameterType="BoardDTO">
UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
</update>

<delete id="setDelete" parameterType="BoardDTO">
DELETE FROM NOTICE WHERE NUM = #{num}
</delete>

<select id="getCount" resultType="Long">
SELECT COUNT(NUM) FROM NOTICE
</select>


</mapper>